{
  "extends": "plasmo/templates/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx"]
}
